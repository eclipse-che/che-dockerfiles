che:
  image: <%= ENV["IMAGE_CHE"] %>
  env_file:
    - '/che/instance/config/che.env'
  volumes:
    - '/var/run/docker.sock:/var/run/docker.sock'
    - '<%= scope.lookupvar('che::che_instance') -%>/data:/data'
    - '<%= scope.lookupvar('che::che_instance') -%>/logs:/logs'
    - '<%= scope.lookupvar('che::che_instance') -%>/config:/conf'
<% if scope.lookupvar('che::che_env') != 'production' -%>
    - '<%= scope.lookupvar('che::che_assembly') -%>:/assembly'
<% end -%>
  ports:
    - '<%= scope.lookupvar('che::che_port') -%>:8080'
<% if scope.lookupvar('che::che_env') != 'production' -%>
    - '8000:8000'
<% end -%>
  restart: always
  container_name: che
